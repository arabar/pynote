# Maintainer: Stefan Tatschner <stefan@sevenbyte.org>

pkgname=pynote
pkgver=0.1b1
pkgrel=1
pkgdesc="Manage notes on the commandline."
arch=('any')
url="http://redmine.sevenbyte.org/projects/pynote"
license=('MIT')
depends=('python' 'python-prettytable')
conflicts=('pynote-git')
provides=('pynote')
source=("${pkgname}-${pkgver}::git+git://sevenbyte.org/repositories/${pkgname}.git#tag=${pkgver}")
md5sums=('SKIP')


package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  python setup.py install --prefix=/usr --root="${pkgdir}" -O1
}
